{
  "compilerOptions": {
    "outDir": "./dist/js",
    "target": "ES2018",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "types": ["./src/types"]
  },
  "include": [
      "src/**/*"
  ],
}
