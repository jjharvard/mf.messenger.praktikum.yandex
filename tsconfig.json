{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist/js",
    "target": "ES2018",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
